<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">

<service-builder auto-namespace-tables="false" package-path="com.liferay.portal.workflow.kaleo.forms">
	<author>Marcellus Tavares</author>
	<namespace>KaleoForms</namespace>
	<entity local-service="true" name="KaleoProcess" remote-service="true">
		<!-- PK fields -->
		<column name="kaleoProcessId" primary="true" type="long"></column>
		<!-- Group instance -->
		<column name="groupId" type="long"></column>
		<!-- Audit fields -->
		<column name="companyId" type="long"></column>
		<column name="userId" type="long"></column>
		<column name="userName" type="String"></column>
		<column name="createDate" type="Date"></column>
		<column name="modifiedDate" type="Date"></column>
		<!-- Other fields -->
		<column name="DDLRecordSetId" type="long"></column>
		<column name="DDMTemplateId" type="long"></column>
		<column name="workflowDefinitionName" type="String"></column>
		<column name="workflowDefinitionVersion" type="int"></column>
		<!-- Finder methods -->
		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId"></finder-column>
		</finder>
		<finder name="DDLRecordSetId" return-type="KaleoProcess">
			<finder-column name="DDLRecordSetId"></finder-column>
		</finder>
		<!-- References -->
		<reference entity="WorkflowDefinitionLink" package-path="com.liferay.portal"></reference>
		<reference entity="WorkflowInstanceLink" package-path="com.liferay.portal"></reference>
		<reference entity="DDLRecord" package-path="com.liferay.portlet.dynamicdatalists"></reference>
		<reference entity="DDLRecordSet" package-path="com.liferay.portlet.dynamicdatalists"></reference>
	</entity>
	<entity local-service="true" name="KaleoProcessLink" remote-service="false">
		<!-- PK fields -->
		<column name="kaleoProcessLinkId" primary="true" type="long"></column>
		<!-- Other fields -->
		<column name="kaleoProcessId" type="long"></column>
		<column name="workflowTaskName" type="String"></column>
		<column name="DDMTemplateId" type="long"></column>
		<!-- Finder methods -->
		<finder name="KaleoProcessId" return-type="Collection">
			<finder-column name="kaleoProcessId"></finder-column>
		</finder>
		<finder name="KPI_WTN" return-type="KaleoProcessLink" unique="true">
			<finder-column name="kaleoProcessId"></finder-column>
			<finder-column name="workflowTaskName"></finder-column>
		</finder>
	</entity>
	<exceptions>
		<exception>KaleoProcessDDMTemplateId</exception>
	</exceptions>
</service-builder>